<Window x:Class="Lab_rab_4._1_KhasanovaNG_BPI_23_01.WindowInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab_rab_4._1_KhasanovaNG_BPI_23_01"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="250" Width="300">
    <StackPanel Margin="10">
        <TextBlock Text="Фамилия:"/>
        <TextBox x:Name="TbLastName" Text="{Binding LastName}" Height="25"/>

        <TextBlock Text="Имя:" Margin="0,10,0,0"/>
        <TextBox x:Name="TbFirstName" Text="{Binding FirstName}" Height="25"/>

        <TextBlock Text="Должность:" Margin="0,10,0,0"/>
        <ComboBox x:Name="CbRole" ItemsSource="{Binding Roles}" SelectedItem="{Binding SelectedRole}" Height="25"/>

        <TextBlock Text="Дата рождения:" Margin="0,10,0,0"/>
        <DatePicker x:Name="DpBirthday" SelectedDate="{Binding Birthday}" Height="25"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="OK" Click="Ok_Click" Width="60" Margin="0,0,10,0"/>
            <Button Content="Отмена" Click="Cancel_Click" Width="60"/>
        </StackPanel>
    </StackPanel>
</Window>
